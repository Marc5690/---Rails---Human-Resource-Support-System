<% provide(:title, "Project") %>
<div class="row">
  <aside class="span4">
    <section>
      <h1></h1>
      	<div style="white-space: nowrap">
          <script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker()
</script>

        <%= bootstrap_form_for @project do |f| %>
<%= render 'shared/error_messages',  object: f.object %> 
     
      <%#= f.label :Title %>
      <%= f.text_field :title %>

      <%#= f.label :Date_Started %>
      <%= f.text_field :date_started, 'data-behaviour' => 'datepicker',:readonly => true  %>

      <%#= f.label :Date_Ended %>
      <%= f.text_field :date_ended, 'data-behaviour' => 'datepicker',:readonly => true  %>

      <%#= f.label :Estimated_Hours %>
      <%= f.text_field :estimated_hours %>
      <%=f.hidden_field :company_id, :value => current_user.company_id%>
      <%#= f.label :Number_Of_Tasks%>
      <%#= f.text_field :number_of_tasks %>
      <%#= form_tag("/absenceadd") do %>
  <%#= label_tag(:q, "Number of tasks:") %>
  <%#= text_field_tag(:q )%>
  <%#= submit_tag("Continue") %>
      
      </br>
      <%= f.actions do %>
      <%= f.submit "Create Project", class: "btn", disable_with: 'Saving...' %>
     
    <%#= f.primary 'Create My Account', disable_with: 'Saving...' %>
  <% end %>

      <%#= f.submit "Create Project", class: "btn"%>
<%end%>
       <%#,:controller => :static_pages :action => :menu%>
      </div>
      <%#end%>
    </section>
  </aside>
</div>



